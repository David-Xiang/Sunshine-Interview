<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission-group.CAMERA" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.example.android.sunshineinterview.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.android.sunshineinterview.activities.ChooseSideActivity" />
        <activity android:name="com.example.android.sunshineinterview.activities.EndingActivity" />
        <activity android:name="com.example.android.sunshineinterview.activities.InterviewActivity" />
        <activity android:name="com.example.android.sunshineinterview.activities.WaitForActionActivity" />
        <activity android:name="com.example.android.sunshineinterview.activities.SigninActivity" />
        <activity android:name="com.example.android.sunshineinterview.activities.WaitForSelectionActivity" />
        <activity android:name="com.example.android.sunshineinterview.activities.ReadyActivity" />
        <activity android:name="com.example.android.sunshineinterview.activities.EndingActivity1" />
        <activity android:name="com.example.android.sunshineinterview.activities.InterviewActivity1" />
        <activity android:name="com.example.android.sunshineinterview.activities.ConfirmActivity" />
        <activity android:name="com.example.android.sunshineinterview.activities.SigninActivity1" />
        <activity android:name="com.example.android.sunshineinterview.activities.SelectActivity" />
    </application>

</manifest>